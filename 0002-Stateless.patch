 bus/session.conf.in | 6 ++++--
 bus/system.conf.in  | 6 ++++--
 2 files changed, 8 insertions(+), 4 deletions(-)

diff --git a/bus/session.conf.in b/bus/session.conf.in
index cfe9544..5c84ac9 100644
--- a/bus/session.conf.in
+++ b/bus/session.conf.in
@@ -27,11 +27,13 @@
 
   <!-- Config files are placed here that among other things, 
        further restrict the above policy for specific services. -->
-  <includedir>session.d</includedir>
+  <includedir ignore_missing="yes">session.d</includedir>
+
+  <includedir ignore_missing="yes">/etc/dbus-1/session.d</includedir>
 
   <!-- This is included last so local configuration can override what's 
        in this standard file -->
-  <include ignore_missing="yes">session-local.conf</include>
+  <include ignore_missing="yes">/etc/dbus-1/session-local.conf</include>
 
   <include if_selinux_enabled="yes" selinux_root_relative="yes">contexts/dbus_contexts</include>
 
diff --git a/bus/system.conf.in b/bus/system.conf.in
index c1541bf..8b31699 100644
--- a/bus/system.conf.in
+++ b/bus/system.conf.in
@@ -85,11 +85,13 @@
 
   <!-- Config files are placed here that among other things, punch 
        holes in the above policy for specific services. -->
-  <includedir>system.d</includedir>
+  <includedir ignore_missing="yes">system.d</includedir>
+
+  <includedir ignore_missing="yes">/etc/dbus-1/system.d</includedir>
 
   <!-- This is included last so local configuration can override what's 
        in this standard file -->
-  <include ignore_missing="yes">system-local.conf</include>
+  <include ignore_missing="yes">/etc/dbus-1/system-local.conf</include>
 
   <include if_selinux_enabled="yes" selinux_root_relative="yes">contexts/dbus_contexts</include>
 
